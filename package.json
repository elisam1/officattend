{
  "name": "officattend",
  "version": "1.0.0",
  "description": "Face Recognition Attendance Tracking System",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "fetch-models": "node scripts/fetch-models.cjs",
    "server": "node server/index.js",
    "package": "node scripts/package-dist.cjs",
    "electron": "electron .",
    "electron:dev": "set NODE_ENV=development&& electron .",
    "electron:build": "node scripts/build-electron.cjs"
  },
  "build": {
    "appId": "com.officattend.app",
    "productName": "OfficAttend",
    "copyright": "Copyright Â© 2024 OfficAttend",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!node_modules/electron/**/*",
      "!node_modules/electron-builder/**/*",
      "!node_modules/@electron/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron/icon.ico",
      "uninstallerIcon": "electron/icon.ico",
      "installerHeaderIcon": "electron/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OfficAttend"
    }
  },
  "dependencies": {
    "@techstark/opencv-js": "^4.12.0-release.1",
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "face-api.js": "^0.22.2",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0"
  }
}
