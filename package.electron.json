{
  "name": "officattend-electron",
  "version": "1.0.0",
  "description": "OfficAttend - Face Recognition Attendance Tracking System",
  "main": "electron/main.js",
  "author": "OfficAttend",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "dev": "vite",
    "build": "vite build",
    "server": "node server/index.js",
    "electron": "electron .",
    "electron:dev": "set NODE_ENV=development && electron .",
    "electron:build": "npm run build && electron-builder",
    "package": "node scripts/package-dist.cjs"
  },
  "build": {
    "appId": "com.officattend.app",
    "productName": "OfficAttend",
    "copyright": "Copyright Â© 2024 OfficAttend",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "server",
        "to": "server"
      },
      {
        "from": "public/models",
        "to": "dist/models"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron/icon.ico",
      "uninstallerIcon": "electron/icon.ico",
      "installerHeaderIcon": "electron/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OfficAttend"
    }
  },
  "dependencies": {
    "@techstark/opencv-js": "^4.12.0-release.1",
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "face-api.js": "^0.22.2",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.4.0"
  }
}
